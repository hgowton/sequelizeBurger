<div class="container">
    <div class="row">
        <div class="col-md-12 title">
            <h1>Burgatory</h1>
        </div>

        <div class="col-md-7">
            <h3 class="directions">Orders</h3>
            <ul> 
                {{#each burgers}}
                    {{#unless devoured}}
                        {{>burgers/burger-block devoured=false}}
                        <button class="cancel-burger" data-id="{{this.id}}">Cancel Order!</button>
                    {{/unless}}
                {{/each}}

            </ul>
        </div>
        <div class="col-md-5">

        <h3 class="directions">Burger's Devoured</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-12">
            <p class="directions" id="order">Complete your order below.  Enter the description for each item.  Then press submit.</p>
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burg" name="burger_name" minlength="5" size="50">
 
                </div>
                <button type="submit">Place Your Order</button>
            </form>
        </div>
    </div>
</div>
